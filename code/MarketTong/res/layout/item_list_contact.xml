<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- <com.itbox.markettong.widget.CircleImageView -->
    <!-- android:id="@+id/contact_userPhoto" -->
    <!-- android:layout_width="55dp" -->
    <!-- android:layout_height="55dp" -->
    <!-- android:layout_margin="10dp" -->
    <!-- android:src="@drawable/contacts_none_localcontacts_icon" -->
    <!-- app:border_color="@android:color/black" -->
    <!-- app:border_width="2dp" /> -->

    <com.loopj.android.image.SmartImageView
        android:id="@+id/contact_userPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/contacts_none_localcontacts_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/contact_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/contact_userCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#B9BCBB" />
    </LinearLayout>

</LinearLayout>